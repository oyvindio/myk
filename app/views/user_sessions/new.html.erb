<h1><%=t('log_in')%></h1>

<% form_for @user_session, :url => user_session_path do |f| %>
  <%= f.error_messages %>
  <%= f.label t('username') %><br />
  <%= f.text_field :login %><br />
  <br />
  <%= f.label t('password') %><br />
  <%= f.password_field :password %><br />
  <br />
  <%= f.check_box :remember_me %><%= f.label t('remember_me') %><br />
  <br />
  <%= f.submit t('Log_in') %>
<% end %>
